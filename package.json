{
  "name": "pomodoro",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "commit": "git-cz",
    "lint": "eslint --cache .",
    "format": "prettier --write '*.{html,js,json,md}'",
    "release": "semantic-release"
  },
  "dependencies": {
    "@material-ui/styles": "^4.9.10",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "use-sound": "^1.0.2"
  },
  "devDependencies": {
    "@qbaepst/prettier-config": "^1.3.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@testing-library/dom": "^7.2.2",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.3",
    "@testing-library/user-event": "^10.1.0",
    "eslint": "^6.8.0",
    "prettier": "^2.0.5",
    "react-scripts": "3.4.0",
    "semantic-release": "^17.0.7",
    "typescript": "^3.8.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "eslintIgnore": [
    "build"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 52,
        "branches": 65,
        "functions": 60,
        "lines": 51
      }
    }
  },
  "lint-staged": {
    "*.{html,js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "pettier": "@qbaepst/prettier-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/quibaritaenperdresatrompe/pomodoro"
  },
  "release": {
    "repositoryUrl": "https://github.com/quibaritaenperdresatrompe/pomodoro",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/npm",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/CHANGELOG.md",
            "package.json"
          ]
        }
      ]
    ]
  }
}
